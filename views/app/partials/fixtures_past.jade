div.container
	div.page-header
		h1 Past Fixtures 
			a(ng-href='#fixture') 
				small Upcoming Fixtures

	div.col-md-12
		h4(ng-if='fixtures.length === 0').text-center No fixtures have been added for this team yet
		div.panel.panel-default(ng-if='fixtures.length > 0')
			div.table-responsive
				table.table.table-hover
					thead
						tr
							th Team
							th Opposition
							th Location
							th Date
							th Time
					tbody
						tr(ng-repeat="fixture in fixtures | orderBy: '-date'", ng-click='viewFixture(fixture)')
							td {{ fixture['side'] }}
							td {{ fixture['opposition'] }}
							td {{ fixture['location'] }}
							td {{ fixture['date'] | date:"d MMMM yyyy" }}
							td {{ fixture['date'] | date:"HH:mm" }}
							//td
								button.btn.btn-default Organise
								button.btn.btn-default Cancel
		div.row.text-center(ng-if='currentUser.isOwner')
			a(ng-href='#fixture/add')
				span.glyphicon.ask.glyphicon-plus





