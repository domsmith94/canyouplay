div.container
  div.col-md-4.col-md-offset-4
    h2 Change Password

    form(name='changePasswordForm', ng-submit='submitForm(changePasswordForm.$valid)', novalidate='')
      .form-group
        label(for='currentPassword') Current Password
        input#currentPassword.form-control(ng-model='currentPassword', required, name='currentPassword', type='password')
      .form-group
        label(for='newPassword') New Password
        input#newPassword.form-control(ng-model='newPassword', required, name='newPassword', type='password')
      .form-group
        label(for='confirmPassword') Confirm New Password
        input#confirmPassword.form-control(match='newPassword', ng-model='confirmPassword', required, name='confirmPassword', type='password')
      div.row.text-center
          button.btn.btn-default(type='button', value='Back', onclick="history.back(-1)") Back
          button.btn.btn-default(type='submit', ng-disabled='changePasswordForm.$invalid') Change






