div.container
	div.col-md-6.col-md-offset-3
		h2 Add Fixture

		form(name='addFixtureForm', ng-submit='submitForm(addFixtureForm.$valid)', novalidate='')
			.form-group
				label(for='selectSide') Team
				input#selectSide.form-control(ng-model='side', required, name='side', placeholder='E.g. 1st XI')
			.form-group
				label(for='opposition') Opposition
				input#opposition.form-control(type='text', placeholder='Team you are playing', name='opposition', ng-model='opposition', class='form-control', required)
			.form-group
				label(for='location') Location
				input#location.form-control(type='text', placeholder='Enter the venue here', name='location', ng-model='location', class='form-control', required)
			.form-group
				label(for='date') Date
				.input-group
					input.form-control(type='date', name='date', uib-datepicker-popup='{{format}}', ng-model='dt', is-open='popup1.opened', min-date='minDate', max-date='maxDate', datepicker-options='dateOptions', ng-required='true', close-text='Close', alt-input-formats='altInputFormats')
					span.input-group-btn
						button.btn.btn-default(type='button', ng-click='open1()')
							i.glyphicon.glyphicon-calendar
			.form-group
				label(for='time') Time
				input#time.form-control(type='time', name='time', placeholder='For example : 17:00', ng-model='time', class='form-control', required)
			div.row.text-center
				button.btn.btn-default(type='submit', ng-disabled='addFixtureForm.$invalid') Create
