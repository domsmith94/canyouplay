div.container
	div.row.text-center
		h2 Fixtures
		a(href='#/fixtures/add') Add
	div.col-md-12
		div.panel.panel-default
			div.table-responsive
				table.table.table-hover
					thead
						tr
							th Team
							th Opposition
							th Location
							th Date
							th Time
							//th
					tbody
						tr(ng-repeat="fixture in fixtures | orderBy : 'date'")
							td {{ fixture['side'] }}
							td {{ fixture['opposition'] }}
							td {{ fixture['location'] }}
							td {{ fixture['date'] | date:"dd/MM/yyyy" }}
							td {{ fixture['date'] | date:"HH:mm" }}
							//td
								button.btn.btn-default Organise
								button.btn.btn-default Cancel





